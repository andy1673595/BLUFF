<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_increase_dialog_background"
        android:layout_width="329dp"
        android:layout_height="277dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/increase_dialog_back_2" />

    <TextView
        android:id="@+id/text_increase_dice_dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="請選擇數字和數量"
        android:textColor="@color/teal800"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/image_increase_dialog_background"
        app:layout_constraintTop_toTopOf="@+id/image_increase_dialog_background" />

    <ImageView
        android:id="@+id/image_dice_choose"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_increase_dialog_background"
        app:layout_constraintStart_toStartOf="@+id/image_increase_dialog_background"
        app:srcCompat="@drawable/dice1" />

    <TextView
        android:id="@+id/text_dice_count"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginBottom="76dp"
        android:layout_marginStart="32dp"
        android:gravity="center_vertical"
        android:text=" X 1"
        android:textSize="52sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_increase_dialog_background"
        app:layout_constraintStart_toEndOf="@+id/image_dice_choose" />

    <Button
        android:id="@+id/button_puls_5"
        style="@style/MyButtonInDiceDialog"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="+ 5"
        app:layout_constraintBottom_toBottomOf="@+id/button_puls_1"
        app:layout_constraintEnd_toStartOf="@+id/button_puls_1" />

    <Button
        android:id="@+id/button_decrease_5"
        style="@style/MyButtonInDiceDialog"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="- 5"
        app:layout_constraintBottom_toBottomOf="@+id/button_decrase_1"
        app:layout_constraintEnd_toStartOf="@+id/button_decrase_1" />

    <Button
        android:id="@+id/button_puls_1"
        style="@style/MyButtonInDiceDialog"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:text="+ 1"
        app:layout_constraintBottom_toTopOf="@+id/text_dice_count"
        app:layout_constraintEnd_toEndOf="@+id/image_increase_dialog_background"
        app:layout_constraintTop_toBottomOf="@+id/text_dice_count"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_decrase_1"
        style="@style/MyButtonInDiceDialog"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:text="- 1"
        app:layout_constraintEnd_toEndOf="@+id/image_increase_dialog_background"
        app:layout_constraintTop_toBottomOf="@+id/text_dice_count" />

    <ImageView
        android:id="@+id/image_ok_button_dice_dialog"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/image_increase_dialog_background"
        app:layout_constraintTop_toTopOf="@+id/image_increase_dialog_background"
        app:srcCompat="@drawable/ok_button_dialog" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/modify_comment_background"
        android:layout_width="329dp"
        android:layout_height="400dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/increase_dialog_back_2" />

    <TextView
        android:id="@+id/text_modify_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="修改簽名"
        android:textColor="@color/teal600"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/modify_comment_background"
        app:layout_constraintStart_toStartOf="@+id/modify_comment_background"
        app:layout_constraintTop_toTopOf="@+id/modify_comment_background" />

    <Button
        android:id="@+id/button_save_comment"
        style="@style/MyButtonInDiceDialog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="保存"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_quit_edit_comment"
        app:layout_constraintStart_toStartOf="@+id/modify_comment_background" />

    <Button
        android:id="@+id/button_quit_edit_comment"
        style="@style/MyButtonInDiceDialog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:text="放棄"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/modify_comment_background"
        app:layout_constraintEnd_toEndOf="@+id/modify_comment_background" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/edit_comment_background"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_rectangle_round"
        app:layout_constraintBottom_toTopOf="@+id/button_quit_edit_comment"
        app:layout_constraintEnd_toEndOf="@+id/button_quit_edit_comment"
        app:layout_constraintStart_toStartOf="@+id/button_save_comment">

        <EditText
            android:id="@+id/edit_comment_modify_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="top|left"
            android:hint="請輸入簽名檔"
            android:textColor="@color/teal800"
            android:textSize="16sp"
            android:background="@drawable/bg_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>